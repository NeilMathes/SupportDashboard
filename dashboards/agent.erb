<script type='text/javascript'>
$(function() {
  Dashing.widget_base_dimensions = [600, 510]
  Dashing.numColumns = 3
  Dashing.numRows = 2
});
</script>

<% content_for :title do %>Tech Support Agent Metrics Dashboard<% end %>

<div class="gridster">
  <ul>
	<li data-row="1" data-col="1" data-sizex="1" data-sizey="1"> 
		<div data-id="resolved" data-view="FullpieAgent" style="background-color:#095209;" data-moreinfo="Tickets resolved today" data-title="Resolved Tickets (ALL)"></div>
	</li>
	
	<li data-row="1" data-col="2" data-sizex="1" data-sizey="1"> 
		<div data-id="resolvedu" data-view="FullpieAgent" style="background-color:#095209;" data-moreinfo="Tickets resolved today" data-title="Resolved Tickets (UMS)"></div>
	</li>

	<li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
		<div data-id="resolvedc" data-view="FullpieAgent" style="background-color:#095209;" data-moreinfo="Tickets resolved today" data-title="Resolved Tickets (CBSW)"></div>
	</li>

	<li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
		<div data-id="assigned" data-view="FullpieAgent" style="background-color:#933f0b;" data-moreinfo="Active tickets by assignee" data-title="Assigned Tickets"></div>
	</li>

	<li data-row="2" data-col="2" data-sizex="1" data-sizey="1">
		<div data-id="pending" data-view="FullpieAgent" style="background-color:#983333;" data-moreinfo="Assigned tickets NOT on the log" data-title="Pending Tickets"></div>
	</li>

	<li data-switcher-interval="10000" data-row="2" data-col="3" data-sizex="1" data-sizey="1">
		<div data-id="laststatustable" data-view="Table" style="background-color:#0000ff;" data-moreinfo="Last ticket status update and aging in hh:mm" data-title="Last Ticket Updated"></div>
		<div data-id="contractedtable" data-view="Table" style="background-color:#0000ff;" data-moreinfo="Contracted work tickets" data-title="Contracted Work"></div>
		<div data-id="escalatedtable" data-view="Table" style="background-color:#0000ff;" data-moreinfo="Escalated ticket status and aging in hh:mm" data-title="Escalated Tickets"></div>
	</li>
  </ul>
</div>
