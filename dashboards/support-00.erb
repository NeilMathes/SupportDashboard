<script type='text/javascript'>
$(function() {
  // These settings override the defaults set in application.coffee. You can do this on a per dashboard basis.
  Dashing.gridsterLayout('[{"col":1,"row":1},{"col":2,"row":1},{"col":3,"row":1},{"col":4,"row":1},{"col":1,"row":3},{"col":1,"row":2},{"col":2,"row":2},{"col":2,"row":3},{"col":3,"row":2}]')
  Dashing.widget_base_dimensions = [460, 340]
  Dashing.numColumns = 4
});
</script>

<% content_for :title do %>Support Information Dashboard<% end %>

<div class="gridster">
  <ul>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="averageresponsetime" data-view="Meter" data-title="Average Response Time" data-moreinfo="(in minutes)" data-min="0" data-max="75"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="sla30" data-view="Meter" data-moreinfo="Number of calls with response time under 30 minutes" style="background-color:#2F8800;" data-title="Under 30" data-min="0" data-max="75"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="sla60" data-view="Meter" data-moreinfo="Number of calls with response time of 31 to 60 minutes" style="background-color:#FF6600;" data-title="Under 60" data-min="0" data-max="75"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="sla90" data-view="Meter" data-moreinfo="Number of calls with response time over 60 minutes" style="background-color:#EE2500;" data-title="Over 60!" data-min="0" data-max="1"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cbswopentickets" data-view="List" data-unordered="true" data-title="CBSW Tickets" data-moreinfo="Open tickets by SLA" style="background-color:#6F95FF;"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="umsopentickets" data-view="List" data-unordered="true" data-title="UMS Tickets" data-moreinfo="Open tickets by SLA" style="background-color:#5C65C0;"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="waittime" data-view="Meter" data-moreinfo="Current max wait time" style="" data-title="Wait Time" data-min="0" data-max="60"></div>
    </li>

<!--
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Text" data-title="QDA" data-moreinfo="ಠ_ಠ"></div>
    </li>
-->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Clock"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div data-id="history" data-view="Graph" data-title="Active Tickets" data-moreinfo="Over the past three hours" style="background-color:#47bbb3;"></div>
    </li>

  </ul>
</div>
